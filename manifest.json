{
    "manifest_version": 3,
    "name": "Custom Translator",
    "version": "1.3.0",
    "description": "단어장을 지정할 수 있는 AI 기반 커스텀 번역기 (Gemini, OpenAI, Cerebras 지원)",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus",
        "scripting",
        "webNavigation",
        "tabs"
    ],
    "host_permissions": [
       "<all_urls>"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon.png",
            "48": "assets/icon.png",
            "128": "assets/icon.png"
        }
    },
    "options_page": "options/options.html",
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["utils/storage.js", "utils/i18n.js", "utils/api.js", "utils/translator.js", "content/content.js"],
        "run_at": "document_idle"
    }],
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    }
}